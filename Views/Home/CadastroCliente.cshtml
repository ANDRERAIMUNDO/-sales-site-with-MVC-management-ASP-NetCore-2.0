
@model Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}
<form asp-action="CadastroCliente" asp-controller="Home">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        # Cadastro de Cliente
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastre-se</h4>
                            </header>
                            <article class="card-body">

                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div> <!-- form-group end.// -->

                                    <div class="col form-group">
                                        <label>Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div> <!-- form-group end.// -->
                                    </div>

                                <div class="form-group">

                                    <label class="form-check form-check-inline">
                                        <label>Sexo</label>
                                    </label>

                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo"  value="Feminino">
                                        <span class="form-check-label"> Feminino</span>
                                        
                                    </label>

                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="Masculino">
                                        <span class="form-check-label"> Masculino</span>
                                    </label>
                                   

                                </div> <!-- form-group end.// -->

                                    <div class="col form-group">
                                        <label>CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF"></span>
                                    </div> <!-- form-group end.// -->

                                    <div class="col form-group">
                                        <label>Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control" placeholder="">
                                        <span asp-validation-for="Telefone"></span>
                                    </div> <!-- form-group end.// -->

                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" asp-for="Email" class="form-control" placeholder="">
                                        <small class="form-text text-muted">
                                            Fique tranquilo, não eviaremos informações aleatorias.
                                        </small>
                                        <span asp-validation-for="Email"></span>
                                    </div> <!-- form-group end.// -->

                                    <div class="form-group">
                                        <label>Criar Senha</label>
                                        <input class="form-control" asp-for="Senha" type="password">
                                        <span asp-validation-for="Senha"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">

                                        <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                    </div> <!-- form-group// -->
                                    <small class="text-muted">
                                        Ao clicar no botão 'Inscrever-se', você confirma que
                                        aceite nossos <br> Termos de uso e Política de privacidade.
                                    </small>
                                </div>
                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Já tem uma conta? <a asp-action="Login" asp-controller="Home">Entrar</a></div>
                        </div> <!-- card.// -->
                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>
    </main>
</form>