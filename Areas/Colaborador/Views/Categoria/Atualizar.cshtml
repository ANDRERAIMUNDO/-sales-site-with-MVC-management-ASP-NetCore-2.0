@model LojaVirtual.Models.Categoria
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Atualizar";
}

<br />
<h5>Atualizar registro</h5>
<form method="post">
    <div class="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Nome da categoria">
        <span asp-validation-for="Nome"></span>
    </div>


    <div class="form-group">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control" placeholder="Nome do slug">
        <span asp-validation-for="Slug"></span>
        <small id="Slug" class="form-text text-muted">Palavra-chave.</small>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaPaID"></label>
        <select asp-for="CategoriaPaID" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="Selecione"></option>
        </select>
        <span asp-validation-for="CategoriaPaID" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>

</form>
