@model LojaVirtual.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar";
}

<br />
<h5>Cadastrar Categoria</h5>

<form method="post" asp-action="Cadastrar" asp-controller="Categoria">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" id="Nome" aria-describedby="">
        <span asp-validation-for="Nome"></span>
        <small id="Nome" class="form-text text-muted">Nome da categoria.</small>
    </div>


    <div class="form-group">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control" id="Slug" aria-describedby="">
        <span asp-validation-for="Slug"></span>
        <small id="Slug" class="form-text text-muted">Palavra-chave.</small>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaPaID"></label>
        <select asp-for="CategoriaPaID" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="Selecione"></option>
        </select>
        <span asp-validation-for="CategoriaPaID" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>

</form>
