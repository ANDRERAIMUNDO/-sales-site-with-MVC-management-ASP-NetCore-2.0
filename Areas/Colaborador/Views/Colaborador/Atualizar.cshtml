@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Atualizar";
}

<br />
<h5>Atualizar registro colaborador</h5>
<form method="post" asp-action="Atualizar" asp-controller="Colaborador">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Tipo" />
    <div class="form-group">

        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" id="Nome" aria-describedby="">
        <span asp-validation-for="Nome"></span>
        <small id="Nome" class="form-text text-muted">Nome completo do colaborador.</small>
    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="Email" aria-describedby="">
        <span asp-validation-for="Email"></span>
        <small id="Email" class="form-text text-muted">Email valido.</small>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-info">Cancelar</a>

</form>
