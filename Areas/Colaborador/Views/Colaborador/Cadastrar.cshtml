@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<br />

<form method="post" asp-action="Cadastrar" asp-controller="Colaborador">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" id="Nome" aria-describedby="">
        <span asp-validation-for="Nome"></span>
        <small id="Nome" class="form-text text-muted">Nome completo do colaborador.</small>
    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="Email" aria-describedby="">
        <span asp-validation-for="Email"></span>
        <small id="Email" class="form-text text-muted">Email valido.</small>
    </div>
    
    
    
    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>

</form>
